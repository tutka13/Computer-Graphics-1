<Window x:Class="Scanline.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scanline"
        mc:Ignorable="d"
        Title="Scanline" Height="635" Width="815">
    <Grid>
        <Canvas x:Name="g" HorizontalAlignment="Left" Height="600" VerticalAlignment="Top" Width="600" Cursor="Hand" MouseLeftButtonDown="g_MouseLeftButtonDown" MouseRightButtonDown="g_MouseRightButtonDown">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#ebeff5" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
        </Canvas>
 
        <Button x:Name="Reset" Content="Reset" HorizontalAlignment="Left" Margin="610,550,0,0" VerticalAlignment="Top" 
                    Width="180" Height="30" Background="White" BorderBrush="DarkBlue" FontSize="16" Click="Reset_Click"/>
    </Grid>
</Window>
